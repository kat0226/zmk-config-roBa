#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

&mt {
    flavor = "balanced";
    quick-tap-ms = <0>;
};

&trackball {
    scroll-layers = <3>;

    // arrows {
    //     layers = <3>;
    //     bindings =
    //         <&kp RIGHT_ARROW>,
    //         <&kp LEFT_ARROW>,
    //         <&kp UP_ARROW>,
    //         <&kp DOWN_ARROW>;
    //     tick = <10>;
    //     wait-ms = <5>;
    //     tap-ms = <5>;
    // };
};

/ {
    combos { compatible = "zmk,combos"; };

    macros {
        to_layer_0: to_layer_0 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&to 0>;
        };

        mac: mac {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&tog_off 0 &tog_off 1>,
                <&macro_wait_time 200>,
                <&bt BT_SEL 0>,
                <&macro_wait_time 400>,
                <&tog_on 0>;

            label = "MAC";
        };

        zfold6: zfold6 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&tog_off 0 &tog_off 1>,
                <&macro_wait_time 200>,
                <&bt BT_SEL 1>,
                <&macro_wait_time 400>,
                <&tog_on 1>;

            label = "ZFOLD6";
        };
    };

    behaviors {
        lt_to_layer_0: lt_to_layer_0 {
            compatible = "zmk,behavior-hold-tap";
            label = "LAYER_TAP_TO_0";
            bindings = <&mo>, <&mac>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
        };

        tog_on: tog_layer_on_only {
            compatible = "zmk,behavior-toggle-layer";
            #binding-cells = <1>;
        };

        tog_off: tog_layer_off_only {
            compatible = "zmk,behavior-toggle-layer";
            #binding-cells = <1>;
            toggle-mode = "off";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp Q           &kp W                      &kp E                        &kp R             &kp T                                                           &kp Y            &kp U                &kp I                &kp O    &kp P
&kp A           &kp S                      &kp D                        &kp F             &kp G        &mt C_VOL_DN C_VOL_DN       &mt C_VOL_UP C_VOL_UP  &kp H            &mt RIGHT_CONTROL J  &mt RIGHT_COMMAND K  &lt 3 L  &lt 4 MINUS
&kp Z           &kp X                      &kp C                        &kp V             &kp B        &mkp MB1                    &mkp MB2               &kp N            &kp M                &kp COMMA            &kp DOT  &kp SLASH
&kp LEFT_SHIFT  &mt LEFT_ARROW LEFT_ARROW  &mt RIGHT_ARROW RIGHT_ARROW  &lt 2 LANGUAGE_2  &lt 3 SPACE  &mt LEFT_COMMAND LANG1      &mt DELETE DELETE      &mt ENTER ENTER                                                     &kp RIGHT_SHIFT
            >;

            sensor-bindings = <&inc_dec_kp PG_UP PAGE_DOWN>;
        };

        WinDef {
            bindings = <
&kp Q           &kp W                      &kp E                        &kp R             &kp T                                                           &kp Y            &kp U                &kp I                &kp O       &mt RIGHT_ALT P
&kp A           &kp S                      &kp D                        &kp F             &kp G        &mt C_VOL_DN C_VOL_DN       &mt C_VOL_UP C_VOL_UP  &kp H            &mt RIGHT_COMMAND J  &mt RIGHT_CONTROL K  &lt 3 L     &lt 4 MINUS
&kp Z           &kp X                      &kp C                        &kp V             &kp B        &mkp MB1                    &mkp MB2               &kp N            &kp M                &kp COMMA            &kp PERIOD  &mt RIGHT_COMMAND SLASH
&kp LEFT_SHIFT  &mt LEFT_ARROW LEFT_ARROW  &mt RIGHT_ARROW RIGHT_ARROW  &lt 5 LANGUAGE_2  &lt 3 SPACE  &mt LEFT_CONTROL LANG1      &mt DEL DEL            &mt ENTER ENTER                                                        &kp RIGHT_SHIFT
            >;
        };

        NUM {
            bindings = <
&trans          &trans                    &trans                 &trans         &trans                                                             &kp ASTERISK  &kp N1  &kp N2  &kp N3  &kp PLUS
&kp LEFT_SHIFT  &mt C_VOL_UP C_VOLUME_UP  &mt C_BRI_UP C_BRI_UP  &kp C_AC_HOME  &kp GLOBE         &kp K_MUTE            &mt UP_ARROW UP_ARROW      &kp SLASH     &kp N4  &kp N5  &kp N6  &kp MINUS
&kp LEFT_ALT    &mt C_VOL_DN C_VOL_DN     &mt C_BRI_DN C_BRI_DN  &kp F12        &kp LEFT_COMMAND  &kp LEFT_CONTROL      &mt DOWN_ARROW DOWN_ARROW  &kp N0        &kp N7  &kp N8  &kp N9  &kp EQUAL
&kp ESC         &trans                    &trans                 &trans         &trans            &trans                &trans                     &trans                                &kp TAB
            >;
        };

        Symbol {
            bindings = <
&trans          &trans                 &trans                 &trans         &trans                                                                                 &kp EXCLAMATION              &kp AT_SIGN    &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp SQT
&kp LEFT_SHIFT  &mt C_VOL_UP C_VOL_UP  &mt C_BRI_UP C_BRI_UP  &kp C_AC_HOME  &kp C_AC_NEXT_KEYBOARD_LAYOUT_SELECT  &kp K_MUTE            &mt UP_ARROW UP_ARROW      &kp QUESTION                 &kp HASH       &mkp MB1              &mkp MB2               &kp SEMICOLON
&kp LEFT_ALT    &mt C_VOL_DN C_VOL_DN  &mt C_BRI_DN C_BRI_DN  &kp F12        &kp LEFT_COMMAND                      &kp LEFT_CONTROL      &mt DOWN_ARROW DOWN_ARROW  &kp UNDER                    &kp AMPERSAND  &kp LEFT_BRACKET      &kp RIGHT_BRACKET      &kp SLASH
&kp ESC         &trans                 &trans                 &trans         &trans                                &trans                &mt LEFT_ARROW LEFT_ARROW  &mt RIGHT_ARROW RIGHT_ARROW                                                              &kp TAB
            >;

            sensor-bindings = <&inc_dec_kp LC(PAGE_UP) LC(PAGE_DOWN)>;
        };

        Bluetooth {
            bindings = <
&mac    &zfold6      &bt BT_SEL 2    &bt BT_SEL 3  &bt BT_SEL 4                      &trans  &trans    &trans  &trans    &trans
&trans  &trans       &trans          &trans        &trans        &trans      &trans  &trans  &mkp MB1  &sl 3   &mkp MB2  &trans
&trans  &trans       &trans          &trans        &trans        &trans      &trans  &trans  &trans    &trans  &trans    &trans
&trans  &bootloader  &bt BT_CLR_ALL  &trans        &trans        &trans      &trans  &trans                              &trans
            >;
        };

        SCROLL {
            bindings = <
&trans  &trans  &trans  &trans  &trans                      &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans                          &trans
            >;
        };

        layer_6 {
            bindings = <
&trans  &trans        &trans        &trans        &trans                           &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4
&trans  &trans        &trans        &trans        &trans  &trans      &trans       &trans        &trans        &trans        &trans        &trans
&trans  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &trans  &trans      &bootloader  &trans        &trans        &trans        &trans        &bt BT_CLR
&trans  &trans        &trans        &trans        &trans  &trans      &trans       &trans                                                  &bt BT_CLR_ALL
            >;
        };
    };
};
